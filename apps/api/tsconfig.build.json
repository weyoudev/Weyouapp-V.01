{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@shared/*": ["../../packages/shared/src/*"],
      "@prisma/client": ["src/infra/generated/prisma-client"],
      "@prisma/client/*": ["src/infra/generated/prisma-client/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/__tests__/**"
  ]
}
